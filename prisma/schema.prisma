generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String?
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  profileImage String?
}

enum Role {
  USER
  ADMIN
}
